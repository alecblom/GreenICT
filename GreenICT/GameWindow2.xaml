<Window x:Class="GreenICT.GameWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenICT"
        mc:Ignorable="d"
        Title="GameWindow2" Height="900" Width="1500"
            Background="{StaticResource primaryLight}">

    <StackPanel
        Orientation="Horizontal">
        <Grid x:Name="GameWindowGrid" Margin="20" Width="1300" Height="800"
              Background="{StaticResource secondaryLight}"
              MouseLeftButtonUp="GameWindowGrid_MouseLeftButtonUp">
            
        </Grid>
        <Button Height="150" Width="150" VerticalAlignment="Top"  Margin="-12.5,35,0,0" Click="Button_Click">
            <Image Source="C://appImages/flip.png"/>
        </Button>
    </StackPanel>

</Window>
